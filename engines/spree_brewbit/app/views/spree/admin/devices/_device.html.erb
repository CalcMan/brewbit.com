<tr>
  <td class='align-center'><%= device.id %></td>
  <td class='align-center'><%= device.name %></td>
  <td class='align-center'><%= link_to( device.user.email, edit_admin_user_url(device.user) ) if device.user %></td>
  <td class='align-center'><%= device.firmware_version %></td>
  <td class='align-center'><%= device.update_channel %></td>
  <% if device.activated? %>
    <td class='align-center' style="color: limegreen"><span class='fa fa-circle'></span></td>
  <% else %>
    <td class='align-center' style="color: orangered"><span class='fa fa-circle'></span></td>
  <% end %>
  <% if device.connected? %>
    <td class='align-center' style="color: limegreen"><span class='fa fa-circle'></span></td>
  <% else %>
    <td class='align-center' style="color: orangered"><span class='fa fa-circle'></span></td>
  <% end %>
</tr>
